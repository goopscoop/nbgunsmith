<section class="well well4 bg1">
  <div class="container">
    <h2 class='offs5'>
      {{title.bold}}
      <small>
        {{title.small}}
      </small>
    </h2>
    <div class="row offs3">
      {{#each items}}
      <div class="col-md-4 col-sm-12 col-xs-12">
        <a class="thumb" data-fancybox-group='1' href="{{img}}">
          <img class="" style="overflow:hidden;" src="{{img}}" alt="">
          <span class='thumb_overlay'></span>
        </a>
        <p class="lead">
          {{heading}}
        </p>
        <p class="ins767-1">
          {{description}}
          <br /><br />
          {{cta}} {{#if link}}<a href="{{link}}" class="btn-link l-h1 fa-angle-right"></a>{{/if}}
        </p>
      </div>
      {{/each}}
  </div>
</section>